modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gunicorn Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HarmonyRestorer Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Audio Processor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Packages"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Package Installation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Batch Processing"

[[workflows.workflow]]
name = "Start Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Gunicorn Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --workers 4 --worker-class aiohttp.GunicornWebWorker --bind 0.0.0.0:5000 main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "HarmonyRestorer Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Test Audio Processor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_audio_processor.py"

[[workflows.workflow]]
name = "Test Packages"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_packages.py"

[[workflows.workflow]]
name = "Package Installation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip cache purge && pip install --force-reinstall -r requirements.txt"

[[workflows.workflow]]
name = "Test Batch Processing"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_batch_processing.py > test_batch_processing_output.log 2>&1"

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 5000
externalPort = 80
